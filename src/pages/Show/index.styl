.wrapper
  width 800px
  min-height 100vh
  margin 0 auto
  display flex
  flex-direction row
  justify-content center
  align-items center
  animation-name: fadeInDown;
  animation-duration: 1s;
  animation-fill-mode: both;

.mainContainer
  display flex
  flex-direction column

.row
  display flex

.poster
  width 30%
  height 350px
  img
    box-shadow: 0 5px 18px rgba(51, 51, 51, 0.47)
    width 100%

.descriptions
  list-style none
  padding-left 70px
  width 70%
  font-size 14px
  color #000

.description
  font-size 20px
  font-family ProximaNova
  font-weight 500

.movieName
  font-size 33px
  font-weight 900
  line-height 1
  margin-bottom 18px

.titleDescr
  margin 0
  display inline-block
  padding-right 5px

.plot
  margin-top 50px
  font-size 23px

.editLink
  text-decoration none
  display block
  margin-left -10px
  margin-top 10px

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -10%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

