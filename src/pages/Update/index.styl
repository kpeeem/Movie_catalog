.wrapper
  width 800px
  min-height 100vh
  margin 0 auto
  display flex
  flex-direction row
  justify-content center
  align-items center
  animation-name: fadeInDown;
  animation-duration: 1s;
  animation-fill-mode: both;

.mainContainer
  display flex
  flex-direction column
  width 100%

.row
  display flex

.poster
  width 30%
  height 350px
  img
    box-shadow: 0 5px 18px rgba(51, 51, 51, 0.47)
    width 100%

.descriptions
  list-style none
  padding-left 0px
  width 100%
  font-size 14px
  color #000

.description
  font-size 20px
  font-family ProximaNova
  font-weight 500

.movieName
  font-size 33px
  font-weight 900
  line-height 1
  margin-bottom 18px

.titleDescr
  margin 0
  display inline-block
  padding-right 5px

.plotInput
  width 100%
  height 150px
  margin 10px 0
  font-size 18px
  padding 10px

.controls
  display flex

.imgInput, .titleInput, .yearInput, .durationInput
  width 100%
  height 38px
  margin 10px 0
  font-size 18px
  padding-left 10px

.save
  margin-left auto

.cancel
  margin-right 0

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -10%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}
