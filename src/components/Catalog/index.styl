.main
  width 100%
  display flex
  flex-wrap wrap
  list-style none
  padding 20px

.item
  width 50%
  padding 20px

.link
  text-decoration none
  display flex

.poster
  width 30%
  img
    box-shadow: 0 5px 18px rgba(51, 51, 51, 0.47)

.descriptions
  list-style none
  padding 0

.descriptionsContainer
  padding-left 30px
  width 70%
  font-size 14px
  color #000
  .edit
    margin-left 0
    margin-top 20px
  .editLink
    text-decoration none

.description
  font-size 14px
  font-family ProximaNova, HelveticaNeue, Helvetica, Arial, sans-serif
  font-weight 500

.movieName
  font-size 24px
  font-weight 900
  line-height 1
  margin-bottom 18px
  &:hover
    text-decoration underline

.titleDescr
  margin 0
  display inline-block
  padding-right 5px

.plot
  margin-top 10px