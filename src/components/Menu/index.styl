.menu
  list-style none
  display flex
  flex-direction row
  position relative
  margin 8px auto
  width 1200px
  padding-left 0

.link
  text-decoration none
  cursor pointer
  font-size 20px
  color black
  display: flex
  font-family HelveticaNeue
  font-weight 500
  margin-bottom 0
  margin-right 20px
  &:hover
    text-decoration underline

@media (max-width: 992px)
  .menu
    display none